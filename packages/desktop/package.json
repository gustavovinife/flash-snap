{
  "name": "@flash-snap/desktop",
  "version": "1.0.18",
  "description": "Flash Snap Desktop - Electron application for spaced repetition learning",
  "main": "./out/main/index.js",
  "author": "Gustavo Ferreira",
  "homepage": "https://github.com/gustavowebjs/flash-snap",
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "yarn typecheck:node && yarn typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "yarn typecheck && electron-vite build",
    "postinstall": "test -n \"$VERCEL\" || electron-builder install-app-deps",
    "build:unpack": "yarn build && electron-builder --dir",
    "build:win": "yarn build && electron-builder --win --x64",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux --x64",
    "publish:win": "env $(cat .env.sh) yarn build && env $(cat .env.sh) electron-builder --win --x64 --publish always",
    "publish:mac": "env $(cat .env.sh) yarn build && env $(cat .env.sh) electron-builder --mac --publish always",
    "publish:linux": "env $(cat .env.sh) yarn build && env $(cat .env.sh) electron-builder --linux --x64 --publish always",
    "publish": "env $(cat .env.sh) yarn build && env $(cat .env.sh) electron-builder --mac --win --linux --x64 --publish always",
    "publish:all": "env $(cat .env.sh) yarn build && env $(cat .env.sh) electron-builder -mwl --x64 --publish always",
    "clean": "rm -rf node_modules dist out .electron-vite"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@supabase/supabase-js": "2.45.6",
    "@tanstack/react-query": "^5.75.2",
    "auto-launch": "^5.0.6",
    "axios": "^1.8.4",
    "electron-updater": "^6.3.9",
    "i18next": "^25.0.1",
    "i18next-browser-languagedetector": "^8.0.5",
    "lucide-react": "^0.503.0",
    "openai": "^6.16.0",
    "posthog-js": "^1.335.2",
    "react-i18next": "^15.5.1",
    "react-router-dom": "^7.5.1",
    "update-electron-app": "^3.1.1"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jsdom": "^27",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "electron": "35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "fast-check": "^4.5.3",
    "jsdom": "^27.4.0",
    "playwright": "^1.56.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vitest": "^4.0.18"
  }
}
