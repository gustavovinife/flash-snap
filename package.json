{
  "name": "flash-snap-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Flash Snap - Spaced repetition learning app for desktop and mobile",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "desktop": "yarn workspace @flash-snap/desktop",
    "mobile": "yarn workspace @flash-snap/mobile",
    "site": "yarn workspace @flash-snap/site",
    "dev:desktop": "yarn workspace @flash-snap/desktop dev",
    "dev:mobile": "yarn workspace @flash-snap/mobile start",
    "dev:site": "yarn workspace @flash-snap/site dev",
    "build:desktop": "yarn workspace @flash-snap/desktop build",
    "build:mobile": "yarn workspace @flash-snap/mobile build",
    "build:site": "yarn workspace @flash-snap/site build",
    "start:desktop": "yarn workspace @flash-snap/desktop start",
    "android": "yarn workspace @flash-snap/mobile android",
    "ios": "yarn workspace @flash-snap/mobile ios",
    "web": "yarn workspace @flash-snap/mobile web",
    "lint": "yarn workspaces run lint",
    "lint:desktop": "yarn workspace @flash-snap/desktop lint",
    "lint:mobile": "yarn workspace @flash-snap/mobile lint",
    "clean": "yarn workspaces run clean && rm -rf node_modules",
    "clean:desktop": "yarn workspace @flash-snap/desktop clean",
    "clean:mobile": "yarn workspace @flash-snap/mobile clean",
    "install:all": "yarn install",
    "typecheck": "yarn workspaces run typecheck",
    "format": "yarn workspaces run format",
    "test": "yarn workspace @flash-snap/desktop test",
    "test:desktop": "yarn workspace @flash-snap/desktop test",
    "prepare": "husky || true"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gustavowebjs/flash-snap.git"
  },
  "author": "Gustavo Ferreira",
  "license": "MIT",
  "devDependencies": {
    "husky": "^9.1.7"
  }
}
